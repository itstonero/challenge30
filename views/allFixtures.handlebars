<table class="table table-dark table-striped">
    <thead>
        <th>Selected</th>
        <th>Game</th>
        <th>Time</th>
        <th>League</th>
        <th>Country</th>
    </thead>
    <tbody>
        <tr>
            <td colspan="2">
                <button type="button" class="btn btn-info btn-block" onclick="insertFixtures(true)"> Insert </button>
            </td>
            <td></td>
            <td colspan="2">
                <button type="button" class="btn btn-info btn-block" onclick="insertFixtures(true)"> Insert + Trim </button>
            </td>
        </tr>
        {{#each today}}
            <tr onclick="addFixture('{{this.raw}}')" style="cursor: pointer;">
                <td>
                    <input type="checkbox" class="form-check-input" id="{{this.fixtureId}}" disabled=true>
                </td>
                <td>{{  this.game }}</td>
                <td>{{  this.time }}</td>
                <td>{{  this.league }}</td>
                <td>{{  this.country }}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

