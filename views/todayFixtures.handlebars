
<div>
<table class="table table-dark table-striped">
    <thead>
      <th>S/N</th>
        <th>Match</th>
        <th>Check Time</th>
        <th>Suggestion</th>
        <th>Location</th>
        <th>Played Duration</th>

    </thead>
    <tbody>
        {{#each today}}
            <tr style="cursor: pointer;"  data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="suggestFixture({{  parseFixture this  }})">
                <td>{{  increment @index }}</td>
                <td>{{  this.game }}</td>
                <td>{{  checkGameTime this.time }}</td>
                <td>{{  this.suggestion }}</td>
                <td>{{  locateFixture this  }}</td>
                <td>{{  currentGameTime this.time }}</td>
            </tr>
        {{/each}}
    </tbody>
</table>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Suggestion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <form method="POST" id="gameUpdate" action="/fixtures/today">
          <div class="modal-body">
            <div class="centerThis">
              <div class="suggestThis suggestThisHome suggest"><span>Home</span><br/><span>DNB</span></div>
              <div class="suggestThis suggestThisHome suggest"><span>Home</span><br/><span>Wins</span></div>
              <div class="suggestThis suggestThisHome suggest"><span>Home</span><br/><span>-1.5 AH</span></div>
              <div class="suggestThis suggestThisHome suggest"><span>Home</span><br/><span>-2.5 AH</span></div>
            </div>
            <hr/>
            <div class="centerThis">
              <div class="suggestThis suggestThisGoals suggest"><span>Goals</span><br/><span>Ov. 2.5</span></div>
              <div class="suggestThis suggestThisGoals suggest"><span>Goals</span><br/><span>Ov. 3.5</span></div>
            </div>
            <hr/>
            <div class="centerThis">
              <div class="suggestThis suggestThisAway suggest"><span>Away</span><br/><span>DNB</span></div>
              <div class="suggestThis suggestThisAway suggest"><span>Away</span><br/><span>Wins</span></div>
              <div class="suggestThis suggestThisAway suggest"><span>Away</span><br/><span>-1.5 AH</span></div>
              <div class="suggestThis suggestThisAway suggest"><span>Away</span><br/><span>-2.5 AH</span></div>
            </div>
            <input type="hidden" class="form-control" name="suggestion" aria-label="Add Suggestion to Fixture" id="fixtureSuggestion">
            <input type="hidden" class="form-control" name="fixtureId" aria-label="Fixture" id="fixtureId">
            <input type="hidden" class="form-control" name="adviceOdd" aria-label="Add Advice Odd to Fixture" id="fixtureAdvice">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" onclick="removeSlip()" data-bs-dismiss="modal">Remove Game</button>
          </div>
        </form>
    </div>
  </div>
</div>
